<p id="notice">
	<%= notice %>
</p>

<%unless @events.nil?%>
<table id="scheduleTable" class="table table-bordered">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description:</th>
			<th>Class:</th>
			<th>Date:</th>
			<th>Start Time</th>
			<th>End Time</th>
		</tr>
	</thead>
	<tbody>
		<%@events.each_with_index do |event,i|%>
		<tr>
			<td>
				<%if !current_user.nil? && (current_user == event.user || current_user.role == ENV["ROLE_ADMIN"])%>
				<a id="show_list_events" href="#" onclick="show_list_events_details(<%=event.to_json%>); return false;"><%= event.title.humanize %></a>
	           <%else%>
	            <a id="show_list_events" href="#" onclick="showEventDetailsUser(<%=event.to_json%>); return false;"><%= event.title.humanize %></a>
	           <%end%>
            </td>
			<td><%= event.description %></td>
			
			<td><%= event.location %></td>
			
			<td><%= event.date.strftime("%d/%m/%Y") %></td>

			<td><%= event.starttime.strftime("%I:%M %p ") %></td>

			<td><%= event.endtime.strftime("%I:%M %p ") %></td>
		</tr>

		<%end%>
	</tbody>
</table>

<%else%>
<h3>No Events</h3>
<%end%>

<script type="text/javascript">
  $("#scheduleTable").DataTable({
	  responsive: true
	});
	
</script>
